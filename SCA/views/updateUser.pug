extends layout

block content
    title='Pokemon Center - Update information'
    div(class = 'text-center center-div')
        div(class = 'container w-25 border py-3' id='update')
            h2='Update user'
            form(method='POST' action='/update')
                div.form-group
                    label Email:
                    input(class='form-control' type='email' placeholder='place@holder.com' name='username' required='false' value=(undefined===user ? '' : user.username) )
                    label Password:
                    input(class= 'form-control' type='password' placeholder='Password' name='password' required='false')
                    label Address:
                    input(class='form-control' type='text' placeholder='Placeholder' name='address' required='false' value=(undefined === user ? '' : user.address))
                    label Region:
                    select(class='form-control' name='region' required='true')
                        option(disabled selected) Select a Pokemon region
                        option(value='Kanto') Kanto
                        option(value='Johto') Johto
                        option(value='Hoenn') Hoenn
                        option(value='Sinnoh') Sinnoh
                        option(value='Unova') Unova
                        option(value='Kalos') Kalos
                        option(value='Alola') Alola
                        option(value='Galar') Galar
                        option(value='Hisui') Hisui
                    //input(class='form-control-input' type='radio' name='driver' checked='true' required='false' value=(undefined === user ? 'false' : user.driver))
                    //label Consumer
                    //input(class='form-control-input' type='radio' name='driver' value=(undefined === user ? 'true' : user.driver))
                    //label Driver
                button.btn.btn-primary(type='submit') Submit
            a(href='/delete' style ='padding-left: 20px') Delete account