doctype html
html
    head
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css',   integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
        link(rel='stylesheet', href='/stylesheets/style.css')

block content
    title='Pokemon Center - Register'
    div(class = 'text-center center-div' id = 'login')
        div(class = 'container w-25 border py-3')
            h1=title
            form(method='POST' action='')
                div.form-group
                    label Email:
                    input(class='form-control' type='email' placeholder='place@holder.com' name='username' required='true' value=(username) )
                    if (userexists === 'true')
                        p Email is already in use
                    label Password:
                    input(class='form-control' type='password' placeholder='Password' name='password' required='true' value=(password))
                    label Address:
                    input(class='form-control' type='text' placeholder='Placeholder 42' name='address' required='true' value=(address))
                    label Region:
                    select(class='form-control' name='region' required='true' value=(Region))
                        option(disabled selected) Select a Pokemon region
                        option(value='Kanto') Kanto
                        option(value='Johto') Johto
                        option(value='Hoenn') Hoenn
                        option(value='Sinnoh') Sinnoh
                        option(value='Unova') Unova
                        option(value='Kalos') Kalos
                        option(value='Alola') Alola
                        option(value='Galar') Galar
                        option(value='Hisui') Hisui

                    p What are you?
                    label Trainer
                    input(class='form-control-input' type='radio' name='driver' required='true' value='false')
                    label Courier
                    input(class='form-control-input' type='radio' name='driver' required='true' value='true')

                button.btn.btn-primary(type='submit') Submit

